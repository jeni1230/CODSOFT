def calculator():
    print("üßÆ Welcome to the Simple Calculator!")
    
    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        
        print("\nChoose an operation:")
        print("1 ‚ûï Add")
        print("2 ‚ûñ Subtract")
        print("3 ‚úñÔ∏è Multiply")
        print("4 ‚ûó Divide")
        
        choice = input("Enter the number for your choice (1/2/3/4): ")
        
        if choice == '1':
            result = num1 + num2
            operation = "+"
        elif choice == '2':
            result = num1 - num2
            operation = "-"
        elif choice == '3':
            result = num1 * num2
            operation = "√ó"
        elif choice == '4':
            if num2 == 0:
                print("‚ö†Ô∏è Cannot divide by zero.")
                return
            result = num1 / num2
            operation = "√∑"
        else:
            print("‚ùå Invalid choice. Please select 1, 2, 3, or 4.")
            return
        
        print(f"\n‚úÖ Result: {num1} {operation} {num2} = {result}")
    
    except ValueError:
        print("‚ùó Please enter valid numbers.")

calculator()
