# ğŸ§  Friendly To-Do List Buddy - Command Line Version
import os

# Each task is a dictionary with description and status
todo_list = []

def clear_screen():
    os.system('cls' if os.name == 'nt' else 'clear')

def show_menu():
    print("\nğŸ‘‹ Hey there! What would you like to do today?")
    print("1ï¸âƒ£  View my to-do list")
    print("2ï¸âƒ£  Add something new")
    print("3ï¸âƒ£  Mark a task as done âœ…")
    print("4ï¸âƒ£  Remove a task ğŸ—‘ï¸")
    print("5ï¸âƒ£  Exit (Bye for now!)")

def view_tasks():
    print("\nğŸ“‹ Here's what you've got on your plate:")
    if not todo_list:
        print("âœ¨ Nothing yet! Add a task and letâ€™s get started.")
    else:
        for i, task in enumerate(todo_list):
            status = "âœ… Done" if task['completed'] else "âŒ Not yet"
            print(f"{i+1}. {task['task']} [{status}]")

def add_task():
    task_desc = input("\nğŸ†• What do you need to do? ").strip()
    if task_desc:
        todo_list.append({'task': task_desc, 'completed': False})
        print("ğŸ‘ Got it! Task added to your list.")
    else:
        print("âš ï¸ Hmm... that looked empty. Try again with a task.")

def complete_task():
    view_tasks()
    if not todo_list:
        return
    try:
        task_no = int(input("\nâœ¨ Which task number did you finish? "))
        if 1 <= task_no <= len(todo_list):
            todo_list[task_no - 1]['completed'] = True
            print("ğŸ‰ Yay! Thatâ€™s one task off your list!")
        else:
            print("â— Oops! That number doesnâ€™t match any task.")
    except ValueError:
        print("â— Please enter a number, not letters.")

def delete_task():
    view_tasks()
    if not todo_list:
        return
    try:
        task_no = int(input("\nğŸ—‘ï¸ Which task would you like to delete? "))
        if 1 <= task_no <= len(todo_list):
            removed = todo_list.pop(task_no - 1)
            print(f"ğŸ§¹ Cleaned up! Removed: '{removed['task']}'")
        else:
            print("â— That number isnâ€™t on your list.")
    except ValueError:
        print("â— Please enter a valid task number.")

# Main Program Loop
while True:
    show_menu()
    choice = input("\nğŸ‘‰ Enter your choice (1-5): ")

    if choice == '1':
        clear_screen()
        view_tasks()
    elif choice == '2':
        clear_screen()
        add_task()
    elif choice == '3':
        clear_screen()
        complete_task()
    elif choice == '4':
        clear_screen()
        delete_task()
    elif choice == '5':
        print("\nğŸ‘‹ Take care! Hope you smash your goals today! ğŸ’ª")
        break
    else:
        print("ğŸ¤” Hmm... Thatâ€™s not a valid option. Try 1, 2, 3, 4, or 5.")
