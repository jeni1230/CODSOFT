import random
import string

def generate_password(length, use_uppercase, use_numbers, use_symbols):
    lower = string.ascii_lowercase
    upper = string.ascii_uppercase if use_uppercase else ''
    digits = string.digits if use_numbers else ''
    symbols = string.punctuation if use_symbols else ''

    all_chars = lower + upper + digits + symbols

    if not all_chars:
        return "‚ö†Ô∏è Oops! You need to select at least one type of character."

    # Ensure the password contains at least one character from each selected type
    password = []

    if use_uppercase:
        password.append(random.choice(upper))
    if use_numbers:
        password.append(random.choice(digits))
    if use_symbols:
        password.append(random.choice(symbols))

    # Fill the rest
    while len(password) < length:
        password.append(random.choice(all_chars))

    random.shuffle(password)
    return ''.join(password)

def ask_yes_no(question):
    answer = input(question + " (y/n): ").lower()
    return answer == 'y'

print("üîê Welcome to the Friendly Password Generator!")

try:
    length = int(input("üìè How long should your password be? (Min 4): "))
    if length < 4:
        print("‚ö†Ô∏è Password should be at least 4 characters long.")
    else:
        use_upper = ask_yes_no("Include UPPERCASE letters?")
        use_num = ask_yes_no("Include numbers?")
        use_sym = ask_yes_no("Include symbols? (like @, #, $)")

        password = generate_password(length, use_upper, use_num, use_sym)
        print(f"\nüîë Your secure password: {password}")
except ValueError:
    print("‚ùó Please enter a valid number.")
