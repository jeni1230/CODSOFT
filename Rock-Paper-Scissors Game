import tkinter as tk
import random

# Initialize main window
root = tk.Tk()
root.title("Rock, Paper, Scissors ğŸ®")
root.geometry("400x500")
root.resizable(False, False)
root.config(bg="#f0f0f0")

# Choices
choices = ["rock", "paper", "scissors"]
user_score = 0
computer_score = 0

# Functions
def play(user_choice):
    global user_score, computer_score
    computer_choice = random.choice(choices)

    result_label.config(text=f"You: {user_choice.capitalize()} | Computer: {computer_choice.capitalize()}")

    if user_choice == computer_choice:
        outcome = "It's a Tie ğŸ˜"
    elif (user_choice == "rock" and computer_choice == "scissors") or \
         (user_choice == "scissors" and computer_choice == "paper") or \
         (user_choice == "paper" and computer_choice == "rock"):
        user_score += 1
        outcome = "You Win! ğŸ‰"
    else:
        computer_score += 1
        outcome = "Computer Wins! ğŸ¤–"

    outcome_label.config(text=outcome)
    score_label.config(text=f"ğŸ§‘ You: {user_score} | ğŸ¤– Computer: {computer_score}")

# Widgets
title = tk.Label(root, text="Rock âœŠ Paper âœ‹ Scissors âœŒï¸", font=("Arial", 18, "bold"), bg="#f0f0f0")
title.pack(pady=20)

result_label = tk.Label(root, text="Make your move!", font=("Arial", 14), bg="#f0f0f0")
result_label.pack(pady=10)

outcome_label = tk.Label(root, text="", font=("Arial", 16, "bold"), fg="#1e90ff", bg="#f0f0f0")
outcome_label.pack(pady=10)

score_label = tk.Label(root, text="ğŸ§‘ You: 0 | ğŸ¤– Computer: 0", font=("Arial", 13), bg="#f0f0f0")
score_label.pack(pady=10)

# Buttons
btn_frame = tk.Frame(root, bg="#f0f0f0")
btn_frame.pack(pady=30)

rock_btn = tk.Button(btn_frame, text="âœŠ Rock", width=12, height=2, font=("Arial", 12), command=lambda: play("rock"))
paper_btn = tk.Button(btn_frame, text="âœ‹ Paper", width=12, height=2, font=("Arial", 12), command=lambda: play("paper"))
scissors_btn = tk.Button(btn_frame, text="âœŒï¸ Scissors", width=12, height=2, font=("Arial", 12), command=lambda: play("scissors"))

rock_btn.grid(row=0, column=0, padx=10)
paper_btn.grid(row=0, column=1, padx=10)
scissors_btn.grid(row=0, column=2, padx=10)

# Exit Button
exit_btn = tk.Button(root, text="âŒ Exit Game", command=root.quit, width=20, bg="#ff4d4d", fg="white", font=("Arial", 12))
exit_btn.pack(pady=40)

# Run the GUI loop
root.mainloop()

