import random

# Choices
choices = ['rock', 'paper', 'scissors']
user_score = 0
computer_score = 0
round_number = 1

def get_computer_choice():
    return random.choice(choices)

def get_user_choice():
    print("\n✊ Rock | 📄 Paper | ✂️ Scissors")
    choice = input("👉 What's your move? Type rock, paper, or scissors: ").lower()
    if choice not in choices:
        print("⚠️ That's not a valid choice. Try again!")
        return get_user_choice()
    return choice

def decide_winner(user, computer):
    if user == computer:
        return 'tie'
    elif (user == 'rock' and computer == 'scissors') or \
         (user == 'scissors' and computer == 'paper') or \
         (user == 'paper' and computer == 'rock'):
        return 'user'
    else:
        return 'computer'

def play_round():
    global user_score, computer_score, round_number
    print(f"\n🎮 Round {round_number}")
    user = get_user_choice()
    computer = get_computer_choice()

    print(f"\n🧑 You chose: {user}")
    print(f"🤖 Computer chose: {computer}")

    winner = decide_winner(user, computer)

    if winner == 'tie':
        print("⚖️ It's a tie!")
    elif winner == 'user':
        print("🎉 You win this round!")
        user_score += 1
    else:
        print("💻 Computer wins this round!")
        computer_score += 1

    print(f"\n📊 Score => You: {user_score} | Computer: {computer_score}")
    round_number += 1

def play_game():
    print("🎮 Welcome to Rock, Paper, Scissors!")
    print("First to 5 wins the game 🏆\n")

    while True:
        play_round()
        if user_score == 5:
            print("\n🏆 Congratulations! You won the game!")
            break
        elif computer_score == 5:
            print("\n😞 Computer won the game. Better luck next time!")
            break

        again = input("\n🔁 Play another round? (y/n): ").lower()
        if again != 'y':
            print("\n👋 Thanks for playing! Final score:")
            print(f"🧑 You: {user_score} | 🤖 Computer: {computer_score}")
            break

play_game()
