import random

# Choices
choices = ['rock', 'paper', 'scissors']
user_score = 0
computer_score = 0
round_number = 1

def get_computer_choice():
    return random.choice(choices)

def get_user_choice():
    print("\nâœŠ Rock | ğŸ“„ Paper | âœ‚ï¸ Scissors")
    choice = input("ğŸ‘‰ What's your move? Type rock, paper, or scissors: ").lower()
    if choice not in choices:
        print("âš ï¸ That's not a valid choice. Try again!")
        return get_user_choice()
    return choice

def decide_winner(user, computer):
    if user == computer:
        return 'tie'
    elif (user == 'rock' and computer == 'scissors') or \
         (user == 'scissors' and computer == 'paper') or \
         (user == 'paper' and computer == 'rock'):
        return 'user'
    else:
        return 'computer'

def play_round():
    global user_score, computer_score, round_number
    print(f"\nğŸ® Round {round_number}")
    user = get_user_choice()
    computer = get_computer_choice()

    print(f"\nğŸ§‘ You chose: {user}")
    print(f"ğŸ¤– Computer chose: {computer}")

    winner = decide_winner(user, computer)

    if winner == 'tie':
        print("âš–ï¸ It's a tie!")
    elif winner == 'user':
        print("ğŸ‰ You win this round!")
        user_score += 1
    else:
        print("ğŸ’» Computer wins this round!")
        computer_score += 1

    print(f"\nğŸ“Š Score => You: {user_score} | Computer: {computer_score}")
    round_number += 1

def play_game():
    print("ğŸ® Welcome to Rock, Paper, Scissors!")
    print("First to 5 wins the game ğŸ†\n")

    while True:
        play_round()
        if user_score == 5:
            print("\nğŸ† Congratulations! You won the game!")
            break
        elif computer_score == 5:
            print("\nğŸ˜ Computer won the game. Better luck next time!")
            break

        again = input("\nğŸ” Play another round? (y/n): ").lower()
        if again != 'y':
            print("\nğŸ‘‹ Thanks for playing! Final score:")
            print(f"ğŸ§‘ You: {user_score} | ğŸ¤– Computer: {computer_score}")
            break

play_game()
